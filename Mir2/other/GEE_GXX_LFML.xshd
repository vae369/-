<?xml version="1.0"?>
<SyntaxDefinition name="GEE_GXX_LFMLEngine" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
  <!--设置颜色与文本风格，如粗体，背景色等-->
  <Color name="Comment" foreground="#C6B1B1" exampleText="注释"/>
  <Color name="Card" fontWeight="bold" foreground="#c87c19" exampleText="开头和结尾包含的内容"/>
  <Color name="Field" fontWeight="bold" foreground="#008000" exampleText="字段"/>
  <Color name="string" fontWeight="bold" foreground="#204d74"  exampleText="字符串"/>
  <Color name="GotoKeywords" foreground="#c9302c" exampleText="跳转语句关键词"/>
  <Color name="SemanticKeywords" fontWeight="bold" foreground="DarkCyan" exampleText="if (args == null) throw new ArgumentNullException(nameof(args));" />

  <!-- 主要的规则集 -->
  <RuleSet>
    <!--以//开头或者包裹在/*..*/中的文本使用Comment颜色-->
    <Span color="Comment" begin=";" />
    <!--<Span color="Comment" begin="//" />
    <Span color="Comment" multiline="true" begin="/\*" end="\*/" />-->
    
    <!--Card着色开始-->
    <Span color="Card">
      <Begin>\[|\(\@\@</Begin>
      <End>\]|\)</End>
      <RuleSet>
        <Span begin="@"/>
      </RuleSet>
    </Span>
    <!--Card着色结束-->
    
    <!--string着色开始-->
    <Span color="string">
      <Begin>"</Begin>
      <End>"</End>
      <!--可以定义规则子集-->
      <RuleSet>
        <Span begin="\\" end="." />
      </RuleSet>
    </Span>

    <Span color="string" begin="\&lt;\$" end="\&gt;"/>
    <!--string着色结束-->
    
    <!--定义关键词-->
    <Keywords fontWeight="bold" foreground="Blue">
      <Word>#IF</Word>
      <Word>#ACT</Word>
      <Word>#act</Word>
      <Word>#Act</Word>
      <Word>#ELSEACT</Word>
      <Word>#CALL</Word>
      <Word>#ELSEACT</Word>
      <Word>#SAY</Word>
      <Word>#OR</Word>

      <Word>%M</Word>
      <Word>%X</Word>
      <Word>%Y</Word>
      
      
      <!-- ... -->
    </Keywords>

    <Keywords color="GotoKeywords">
      <Word>BREAK</Word>
      <Word>GOTO</Word>

    </Keywords>

    <Keywords color="SemanticKeywords">
      <Word>SENDMSG</Word>
      <Word>MESSAGEBOX</Word>
      <Word>NOT</Word>
      <Word>VAR</Word>
      <Word>INC</Word>
      <Word>INTEGER</Word>
      <Word>DEC</Word>
      <Word>SMALL</Word>
      <Word>MUL</Word>
      <Word>DIV</Word>
      <Word>RANDOM</Word>
      <Word>CALCVAR</Word>
      <Word>SAVEVAR</Word>
      <Word>SETICON</Word>
    </Keywords>

    <Keywords color="Field">
      <Word>CHECKMAPHUMANCOUNT</Word>
      <Word>!COMPVAL</Word>
      <Word>COMPVAL</Word>
      <Word>INTS</Word>
      <Word>MOV</Word>
      <Word>GAMEGOLD</Word>
      <Word>CLOSE</Word>
      <Word>GIVE</Word>
