      <Word>ADDSKILL</Word>
      <Word>DELSKILL</Word>
      <Word>CHECKITEMW</Word>
      <Word>MONGENEX</Word>
      <Word>MOVEMONSTERS</Word>
      <Word>CHECKTAKEOFFITEM</Word>
      <Word>CHECKCURRTARGETRACE</Word>
